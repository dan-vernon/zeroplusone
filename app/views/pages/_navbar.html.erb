  <% @user = current_user %>
  <% if params[:action] == "home" %>
    <div class="navbar navbar-expand-lg navbar-expand-md navbar-light navbar-lewagon fixed-top navbar-transparent">
  <% else %>
    <div class="navbar navbar-expand-lg navbar-expand-md navbar-light navbar-lewagon fixed-top navbar-purple">
  <% end %>

  <%= link_to "/", class: "navbar-brand" do %>
   <i class="fas fa-bolt bolt"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
          <%= link_to "Home", users_path, class: "nav-link nav-link-color" %>
      </li>
        <% if user_signed_in? %>
        <li class="nav-item">
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link nav-link-color" %> </li>
        <li class="nav-item dropdown">
        <%= cl_image_tag @user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "View Profile", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "View Bookings", user_bookings_path(current_user), class: "dropdown-item" %>
        </div>
        </li>
        <% else %>
        <li class="nav-item"><%= link_to "Log in", user_session_path, class: "nav-link nav-link-color" %></li>
        <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "nav-link nav-link-color" %></li>
        <li class="nav-item dropdown">
        <%= image_tag "https://i2.wp.com/www.mnleadership.org/wp-content/uploads/2017/02/Anonymous-Avatar.png?ssl=1", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        </div>
      </li>
        <% end %>
    </ul>
  </div>
</div>

